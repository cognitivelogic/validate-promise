{
  "name": "validate-promise",
  "version": "2.3.0",
  "description": "Promised based validation library",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "test": "nyc mocha",
    "prepublish": "npm run build"
  },
  "keywords": [
    "validate"
  ],
  "author": "Rob Clayburn",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-transform-flow-strip-types": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "flow-bin": "^0.88.0",
    "jsdom": "^13.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-flow-strip-types"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cognitivelogic/validate-promise.git"
  },
  "dependencies": {
    "is-email": "^1.0.0"
  },
  "nyc": {
    "include": [
      "test/**/*.js"
    ],
    "exclude": [
      "coverage",
      "node_modules",
      "src"
    ],
    "extension": [
      ".js"
    ],
    "require": [
      "@babel/plugin-transform-flow-strip-types",
      "@babel/register",
      "./test/setup.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  }
}
