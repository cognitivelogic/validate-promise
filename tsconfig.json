{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "keyofStringsOnly": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "target": "es6"
  },
  "include": [
    "node_modules/@types/**/*.d.ts",
    "./src/**/*.ts"
  ]
}
